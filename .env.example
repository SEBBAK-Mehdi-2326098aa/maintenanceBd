# Copie ce fichier en .env.local et remplis tes vraies valeurs
# Ne commit PAS .env.local en Git (il est déjà dans .gitignore)

###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=your-secret-key-change-in-production
APP_SHARE_DIR=var/share
###< symfony/framework-bundle ###

###> symfony/routing ###
DEFAULT_URI=http://localhost:8000
###< symfony/routing ###

###> doctrine/doctrine-bundle ###
# Format: driver://user:password@host:port/dbname?serverVersion=X&charset=utf8mb4

# Exemple Alwaysdata MySQL:
DATABASE_URL="mysql://username:password@mysql-username.alwaysdata.net:3306/username_dbname?serverVersion=8.0&charset=utf8mb4"

# Exemple Alwaysdata PostgreSQL:
# DATABASE_URL="postgresql://username:password@postgresql-username.alwaysdata.net:5432/username_dbname?serverVersion=15&charset=utf8"

# Exemple MySQL local:
# DATABASE_URL="mysql://root:password@127.0.0.1:3306/maintenance?serverVersion=8.0&charset=utf8mb4"

# Exemple PostgreSQL local:
# DATABASE_URL="postgresql://postgres:password@127.0.0.1:5432/maintenance?serverVersion=16&charset=utf8"

# Exemple SQLite (développement local simple):
# DATABASE_URL="sqlite:///%kernel.project_dir%/var/data.db"
###< doctrine/doctrine-bundle ###

###> symfony/messenger ###
# Choose one of the transports below
# MESSENGER_TRANSPORT_DSN=amqp://guest:guest@localhost:5672/%2f/messages
# MESSENGER_TRANSPORT_DSN=redis://localhost:6379/messages
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0
###< symfony/messenger ###

###> symfony/mailer ###
MAILER_DSN=null://null
###< symfony/mailer ###
